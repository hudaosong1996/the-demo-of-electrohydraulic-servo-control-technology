<!--pages/admin/admin.wxml-->
<van-cell-group>
  <van-field
    value="{{ username }}"
    required
    clearable
    label="账号"
    icon="question-o"
    placeholder="请输入管理员账号"
    bind:input="userNameInput"
  />

  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    bind:input="passWordInput"
    required
    border="{{ false }}"
  />
  <view style="padding:0px 10rpx;">
  <van-button type="primary"class='batn' block bind:click="loginBtnClick">登录</van-button>
  </view>
</van-cell-group>

